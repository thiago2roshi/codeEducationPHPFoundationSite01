{% macro input(name, type, value, size, require) %}
    <label>
        {{ name }}
    </label>
    <input 
        name="{{ name }}" 
        type="{{ type|default('text') }}"
        placeholder="{{ value|default('') }}"
        size="{{ size|default('20) }}"
    />
{% endmacro %}
